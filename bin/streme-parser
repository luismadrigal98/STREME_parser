#!/bin/bash

# STREME Analysis Pipeline - Shell Wrapper
# This script provides a convenient way to run the STREME pipeline tools

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"
PYTHON_SCRIPT="$PROJECT_ROOT/pipelines/streme_pipeline.py"

# Check if Python script exists
if [ ! -f "$PYTHON_SCRIPT" ]; then
    echo "Error: streme_pipeline.py not found in $PROJECT_ROOT/pipelines/"
    exit 1
fi

# Check if conda environment is activated (optional)
if [[ "$CONDA_DEFAULT_ENV" != "" ]]; then
    echo "Using conda environment: $CONDA_DEFAULT_ENV"
fi

# Run the Python script with all arguments
python3 "$PYTHON_SCRIPT" "$@"
